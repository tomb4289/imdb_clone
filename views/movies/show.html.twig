{# imdb_clone/views/movies/show.html.twig #}
{% extends 'Layouts/base.html.twig' %}

{% block title %}{{ movie.title }} Details{% endblock %}

{% block content %}
    <h1>Movie: {{ movie.title }}</h1>

    <p><strong>Release Date:</strong> {{ movie.release_date }}</p>
    <p><strong>Runtime:</strong> {{ movie.runtime }} minutes</p>
    <p><strong>Description:</strong> {{ movie.description }}</p>
    {# Assuming director_id exists and you want to display it #}
    {% if movie.director_id %}
        <p><strong>Director ID:</strong> {{ movie.director_id }}</p>
    {% endif %}

    {# Edit Button #}
    <p><a href="{{ BASE }}/movies/edit?id={{ movie.id }}" class="button">Edit Movie</a></p>

    {# Delete Button #}
    <form action="{{ BASE }}/movies/delete" method="POST" style="display:inline; margin-left: 10px;">
        <input type="hidden" name="id" value="{{ movie.id }}">
        <button type="submit" onclick="return confirm('Are you sure you want to delete &quot;{{ movie.title }}&quot;? This cannot be undone.');" class="button button-danger">Delete Movie</button>
    </form>

    <p><a href="{{ BASE }}/movies">Back to Movies List</a></p>
{% endblock %}