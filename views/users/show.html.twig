{# imdb_clone/views/users/show.html.twig #}
{% extends 'Layouts/base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block content %}
    <h1>User: {{ user.username }}</h1>

    <p><strong>Email:</strong> {{ user.email }}</p>
    <p><strong>Created At:</strong> {{ user.created_at }}</p>

    <p>
        <a href="{{ base_url }}/users/edit?id={{ user.id }}" class="button">Edit User</a>
        <form action="{{ base_url }}/users/delete" method="POST" style="display:inline-block; margin-left: 10px;" onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
            <input type="hidden" name="id" value="{{ user.id }}">
            <button type="submit" class="button delete">Delete User</button>
        </form>
    </p>

    <p><a href="{{ base_url }}/users">Back to User List</a></p>
{% endblock %}