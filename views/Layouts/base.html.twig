{# imdb_clone/views/Layouts/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}My IMDb Clone{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset_url }}/css/style.css">
</head>
<body>
    <header>
        <h1>{{ app_name|default('IMDb Clone') }}</h1>
        <nav>
            <ul>
                <li><a href="{{ base_url }}/">Home</a></li>
                <li><a href="{{ base_url }}/movies">Movies</a></li>
                <li><a href="{{ base_url }}/genres">Genres</a></li>
                <li><a href="{{ base_url }}/people">People</a></li>
                <li><a href="{{ base_url }}/users">Users</a></li>
            </ul>
        </nav>
    </header>

    <main>
        {% block content %}{% endblock %}
    </main>

    <footer>
        <p>&copy; {{ "now"|date("Y") }} {{ app_name|default('IMDb Clone') }}. All rights reserved.</p>
    </footer>
</body>
</html>